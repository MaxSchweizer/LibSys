<h1>List of all admins</h1>

<table>
  <tr>
    <td>Email</td>
    <td>Name</td>
    <td></td>
  </tr>

  <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= admin.name %></td>
        <td><%= link_to "View Admin Details", admin_path(admin.id) %></td>
      </tr>
  <% end %>
</table>

<%= link_to "Create new Admin", action: :new %>
