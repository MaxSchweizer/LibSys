<h2>Admins</h2>
<h4><%= @admins.size %> Admins Found</h4>

<%= link_to raw('<span class="glyphicon glyphicon-plus"></span> Create New Admin'), action: :new %>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @admins.each do |admin| %>

        <tr>
          <td><%= admin.email %></td>
          <td><%= admin.name %></td>
          <td><%= link_to "View Admin's Details", admin_path(admin) %></td>
          <td><%= unless current_user == admin || admin.email == 'admin@ncsu.edu'
                    link_to raw('<span class="glyphicon glyphicon-trash"></span> Delete Admin'), admin_path(admin), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger"
                  end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>