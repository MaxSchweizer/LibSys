<h2>Edit Admin Details</h2>

<%= form_for :admin, url: admin_path(@admin), method: :patch do |f| %>

    <!-- TODO: We should make the error messaging for the user better -->
    <% if @admin.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@admin.errors.count, "error") %> prohibited
            this admin from being created:
          </h2>
          <ul>
            <% @admin.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      Email: <%= @admin.email %>
    </p>

    <p>
      Name:<br>
      <%= f.text_field :name %>
    </p>

    <% unless @admin.email == 'admin@ncsu.edu' %>
        <p>
          Password:<br>
          <%= f.password_field :password %>
        </p>

        <p>
          Repeat Password:<br>
          <%= f.password_field :password_confirmation %>
        </p>
    <% else %>
        <p>The default admin cannot have their password changed.</p>
    <% end %>
    <p>
      <%= f.submit "Submit" %>
    </p>
<% end %>