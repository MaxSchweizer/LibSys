<h2>Admin Details</h2>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
    </tr>
    </thead>

    <tbody>
    <tr>
      <td><%= @admin.email %></td>
      <td><%= @admin.name %></td>
    </tr>
