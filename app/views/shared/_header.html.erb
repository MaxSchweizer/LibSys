<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <h1>LibSys</h1>
      <% if logged_in? %>
          <%= form_tag("/books", method: "get") do %>
              <%= label_tag(:query, "Search for:") %>
              <%= text_field_tag(:query) %>
              <%= radio_button_tag(:search_type, "isbn", :checked => true) %>
              <%= label_tag(:search_type_isbn, "Isbn") %>
              <% ["title", "authors", "description", "status"].each do |item| %>
                  <%= radio_button_tag(:search_type, item) %>
                  <%= label_tag(:search_type_isbn, item.capitalize) %>
              <% end %>
              <%= submit_tag("Search") %>
          <% end %>
          <% if current_user.admin? %>
              <%= link_to "Show All Admins", admins_path %>
              <%= link_to "Show All Library Members", library_members_path %>
              <%= link_to "My Profile", admin_path(current_user.id) %>
          <% end %>
          <% if current_user.library_member? %>
              <%= link_to "My Profile", library_member_path(current_user.id) %>
          <% end %>
          <%= link_to "Show All Books", books_path %>
      <% end %>
    </div>
  </div>
</nav>